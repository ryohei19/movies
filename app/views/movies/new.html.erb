<div class="col-7">
  <div class="row">
    <div class="col-1 mt-1">
      <%= link_to "", :back, class:"fas fa-arrow-left" %>
    </div>

    <div class="col-11">
      <h3>
        投稿
      </h3>
    </div>
  </div>

  <%= form_with model: @movie, url: movies_path, local:true do |f| %>
	<div class="row justify-content-center mt-5">
	  <div class="col">

      <div class="form-group row">
        <%= f.label :作品名, class: "col-sm-3" %>
        <%= f.text_field :name, class: "form-control col-sm-8" %>
      </div>

      <div class="form-group row" id="star">
        <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
        <%= f.hidden_field :rate, id: :movie_star %>
      </div>
        <script>
          $('#star').raty({
            size     : 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            scoreName: 'movie[rate]',
            half: true,
          });
        </script>

      <div class="form-group row">
        <%= f.label :ジャンル, class: "col-sm-3" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control col-sm-9" %>
      </div>

      <div class="form-group row">
        <%= f.label :感想, class: "col-sm-3" %>
        <%= f.text_area :review, class: "form-control col-sm-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :感想（ネタバレ含む）, class: "col-sm-3" %>
        <%= f.text_area :spoiler, class: "form-control col-sm-8" %>
      </div>

      <div class="text-right mt-5">
        <%= link_to "戻る", user_path(current_user.id), class: "btn  btn-success my-1" %>
        <%= f.submit :投稿, class: "btn btn-success" %>
      </div>
	  </div>
	</div>
	<% end %>
</div>