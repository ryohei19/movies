<div class="container my-5">
  <div class="row">
    <div class="offset-sm-2">
      <h2 class="red-border px-3 pb-1">変更</h2>
    </div>
  </div>

  <%= form_with model:@user, local:true do |f| %>
	<div class="row justify-content-center mt-5">
	  <div class="col-sm-6">

      <div class="form-group row">
        <%= f.label :名前, class: "col-sm-4 mt-1" %>
        <%= f.text_field :name, class: "form-control col-sm-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :自己紹介, class: "col-sm-4 mt-4" %>
        <%= f.text_area :introduction, class: "form-control col-sm-8 mt-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :イチオシ映画, class: "col-sm-4 mt-4" %>
        <%= f.text_field :favorite_movie, class: "form-control col-sm-8 mt-3" %>
      </div>

      <div class="text-right mt-5">
        <%= link_to "戻る", user_path(@user.id), class: "btn  btn-success my-1" %>
        <%= f.submit :保存, class: "btn btn-success" %>
      </div>

	  </div>
	</div>
	<% end %>
</div>