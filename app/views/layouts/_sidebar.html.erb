<% if request.fullpath.include? "admin"  %>
  <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <%= link_to "Movies", admin_genres_path, class: "navbar-brand" %>
      <ul class="nav flex-colum">
        <% if admin_signed_in? %>
          <li class="sidebar-item">
            <%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link" %>
          </li>

          <li class="sidebar-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

<% else %>

  <ul class = "nav sticky-top d-flex flex-column">
    <% if user_signed_in? %>
      <h3><%= link_to "Movies", root_path, class:"brand link" %></h3>

      <li class="sidebar-item mt-5">
        <%= link_to "　タイムライン", user_timeline_path(current_user.id), class:"nav-link fas fa-home" %> <!--タイムライン-->
      </li>

      <li class="sidebar-item">
        <%= link_to "　プロフィール", user_path(current_user.id), class:"nav-link far fa-user" %> <!--プロフィール-->
      </li>

      <li class="sidebar-item">
        <%= link_to "　通知", notifications_path(current_user.id), class:"nav-link far fa-bell" %> <!--通知-->
      </li>

      <li class="sidebar-item">
        <%= link_to "　新規投稿", new_movie_path(current_user.id), class:"nav-link fas fa-pencil-alt" %> <!--新規投稿-->
      </li>

      <li class="sidebar-item">
        <%= link_to "　ログアウト", destroy_user_session_path, method: :delete, data: {confirm: "本当ログアウトしますか？"}, class:"nav-link fas fa-sign-out-alt" %> <!--ログアウト-->
      </li>

    <% else %>
      <h3><%= link_to "Movies", root_path, class:"brand link" %></h3>

      <li class="sidebar-item mt-5">
        <%= link_to "　アカウント作成", new_user_registration_path, class:"nav-link fas fa-user-plus" %>
      </li>

      <li class="sidebar-item">
        <%= link_to "　ログイン", new_user_session_path, class:"nav-link fas fa-sign-in-alt" %>
      </li>

    <% end %>
  </ul>
<% end %>
