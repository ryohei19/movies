<div class="container my-5">
  <div class="row justify-content-between">
    <div class="col-md-2">
    </div>

    <div class="col-md-6">
      <div class="row">
        <div class="col-1 mt-1">
          <%= link_to "", :back, class:"fas fa-arrow-left" %>
        </div>

        <div class="col-11">
          <h3><%= @user.name %></h3>
        </div>
      </div>

      <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">フォロー中</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">フォロワー</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <%= render 'relationships/index', users: @followings %>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <%= render 'relationships/index', users: @followers %>
        </div>
      </div>
    </div>

    <div class="col-md-2">
      <%= render 'search/search', genres: @genres %>
    </div>
  </div>
</div>


